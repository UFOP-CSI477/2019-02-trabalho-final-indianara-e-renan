<style>
    body {
        background-color: rgb(243, 244, 245);
    }

    img {
        margin-top: 50px;
    }

    div.card {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 50px 0;
        width: 80%;
        padding: 22px;
        background-color: white;
        box-shadow: 2px 2px 3px #aaaaaa85;
    }

    button {
        padding: 1em;
        margin: 25px 0;
        border: none;
        border-radius: 2px;
        background-color: rgb(249, 104, 83);
        color: white;
        text-transform: uppercase;
        font-weight: bold;
        align-self: center;
        cursor: pointer;
        transition: all 0.4s;
    }

    button:hover {
        background-color: rgb(206, 75, 28);
    }

    button:hover p {
        transform: translateY(-2px);
    }

    p.subtitle {
        color: rgb(79, 104, 122);
        font-size: 12pt;
        font-weight: lighter;
    }

    p.title {
        color: rgb(79, 104, 122);
        font-size: 14pt;
        font-weight: bolder;
        margin-bottom: 20px;
    }

    p.body {
        align-self: center;
        width: 90%;
    }

    input[type=button] {
        margin: 20px 0;
    }

</style>

